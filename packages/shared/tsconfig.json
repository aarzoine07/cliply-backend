{
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@cliply/shared/*": ["./*"]
    },
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ES2022",
    "lib": ["ES2022"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": false
  },
  "include": ["src", "billing", "logging", "types", "env.ts"]
}

