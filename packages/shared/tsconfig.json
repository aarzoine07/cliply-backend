{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "downlevelIteration": true,
    "composite": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist",
    "noEmit": false,
    "baseUrl": ".",
    "paths": {
      "@cliply/shared": ["./src/index.ts"],
      "@cliply/shared/*": ["./*", "./src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "types/**/*.ts",
    "logging/**/*.ts",
    "auth/**/*.ts",
    "lib/**/*.ts",
    "logger.ts",
    "sentry.ts",
    "env.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "billing"
  ]
}
