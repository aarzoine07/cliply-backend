{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*",
    "billing/**/*",
    "types/**/*",
    "logging/**/*",
    "lib/**/*",
    "pipeline/**/*",
    "storage/**/*",
    "*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}



