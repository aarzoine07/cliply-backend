{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*.ts",
    "types/**/*.ts",
    "billing/**/*.ts",
    "logging/**/*.ts",
    "auth/**/*.ts",
    "lib/**/*.ts",
    "logger.ts",
    "sentry.ts",
    "env.ts"
  ],
  "exclude": [
    "dist",
    "**/dist",
    "../../node_modules",
    "node_modules"
  ]
}


