{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "baseUrl": ".",

    "paths": {
      "@/*": ["src/*"],

      // --- IMPORTANT FIX FOR TESTS ONLY ---
      // Force Vitest and Vite to load shared *source*, not dist.
      "@cliply/shared": ["../../packages/shared/src/index.ts"],
      "@cliply/shared/*": ["../../packages/shared/src/*"]
    },

    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "downlevelIteration": true,

    "plugins": [
      {
        "name": "next"
      }
    ],

    "strictNullChecks": true
  },

  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "test/**/*.ts",
    ".next/types/**/*.ts"
  ],

  "exclude": [
    "node_modules",
    ".next",
    "**/.next/**"
  ]
}


